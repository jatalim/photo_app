<div class = "container">
<div class = "row">
<h2><%= @album.name %></h2>
		<table class = "table">
			<thead>
				<th> Album Name </th>
				<th> Description </th>
				<th> Updated </th>
				<th> User </th>
				<th> Edit </th>
				<th> Delete </th>
			</thead>

			<tbody>
				<tr>
					<td>
					<%= @album.name %> 
					</td>
					<td>
					<%= @album.description %>
					</td>
					<td>
					Updated at <%= @album.updated_at.strftime("%d %b %Y, %T") %>
					</td>
					<td>
					<%= @user.try(:email) %>
					</td>
					<td>
					<%= link_to edit_album_path(id: @album), class: 'btn btn-primary btn-xs' do%>
                	<i class = "glyphicon glyphicon-pencil"></i> 
                	<%end%>
					</td>

					<td>
					<%= link_to album_path(id: @album), 
					method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' do%>
                	<i class = "glyphicon glyphicon-remove"></i> 
                	<%end%>
					</td>
					</tr>
		</table>
</div>

<%= image_tag(@album.image.url, alt: 'Image') if @photo.image? %>


<%= link_to 'new photo', new_album_photo_path(album_id: @album.id) %>
