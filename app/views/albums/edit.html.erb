<h1>Edit your Album</h1>
<%= form_for @album, url: album_path(id: @album.id), method: :patch do |f| %>
 	<div class = "row">
 	<%= f.label :name %>
 	</div>

 	<div class = "row">
  	<%= f.text_field :name %>
	</div>

 	<div class = "row">
 	<%= f.label :description %>
 	</div>

 	<div class = "row">
  	<%= f.text_area :description %>
	</div>
	<p>
	</p>

	<div class = "row">
  	<%= f.submit "Update" %>
	</div>

<% end %>

